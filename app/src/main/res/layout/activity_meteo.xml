<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00cccc"
        tools:context=".MeteoActivity">

    <ImageView
        android:id="@+id/iconMeteo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="85dp"
        android:src="@drawable/nuageux">

    </ImageView>


    <LinearLayout
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="350dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/temperature"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:text="0°C"
            android:textColor="#ffffff"
            android:textSize="50sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/conditionTemps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30sp"
            android:text="______________"
            android:textColor="#ffffff"
            android:textSize="30sp">

        </TextView>

        <TextView
            android:id="@+id/tempsMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30sp"
            android:text="Max : 20°C"
            android:textColor="#ffffff"
            android:textSize="40sp">

        </TextView>

        <TextView
            android:id="@+id/tempsMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="30sp"
            android:text="Min : 7°C"
            android:textColor="#ffffff"
            android:textSize="40sp">

        </TextView>

        <Button
            android:id="@+id/longLat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:backgroundTint="#3366cc"
            android:text="@string/LOCALISER"
            android:textSize="30sp">

        </Button>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/nomV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/nomVille"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/NOM_DE_LA_VILLE"
            android:textColor="#ffffff"
            android:textSize="40sp" />

    </RelativeLayout>


</RelativeLayout>