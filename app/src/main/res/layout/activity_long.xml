<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFB6C1"
        tools:context=".LongActivity">

    <Button
        android:id="@+id/lancer"
        android:layout_width="196dp"
        android:layout_height="61dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="107dp"
        android:text="@string/LANCER"
        app:backgroundTint="#FF69B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="218dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="181dp"
            android:layout_marginEnd="182dp" app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textV"
        android:layout_width="349dp"
        android:layout_height="40dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="149dp"
        android:gravity="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>